<form method="post" action="{{ path('app_post_delete', {'id': post.id}) }}" onsubmit="return confirm('¿Estás seguro de que quieres eliminar este post?');" style="display: inline;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
    <button class="post-detail-action-btn post-detail-delete-btn" type="submit" title="Eliminar">🗑️</button>
</form>
