{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
<div class="post-feed">
    {% for post in posts %}
        {% if post.visible %}
        <article class="post-card">
            <div class="post-header">
                {% if post.author.picture %}
                    <img src="{{ asset('img/' ~ post.author.picture) }}" alt="{{ post.author.username }}" class="post-author-avatar">
                {% else %}
                    <div class="post-author-avatar" style="background-color: #ddd; display: flex; align-items: center; justify-content: center; color: #999; font-weight: bold;">{{ post.author.username|first|upper }}</div>
                {% endif %}
                <a href="{{ path('app_user_show', {'id': post.author.id}) }}" class="post-author-name">{{ post.author.username }}</a>
                <span class="post-date">{{ post.createdAt ? post.createdAt|date('d/m/Y H:i') : '' }}</span>
            </div>
            
            {% if post.image %}
            <div class="post-image-container">
                <a href="{{ path('app_post_show', {'id': post.id}) }}">
                    <img src="{{ asset('img/' ~ post.image) }}" alt="{{ post.title }}" class="post-image">
                </a>
            </div>
            {% endif %}
            
            <h2 class="post-title">{{ post.title }}</h2>
            <div class="post-content">{{ post.content }}</div>
            
            <div class="post-actions">
                {% if app.user %}
                    {% if app.user.id == post.author.id %}
                        <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="post-action-btn">‚úèÔ∏è Editar</a>
                    {% endif %}
                    
                    <div class="post-actions-main">
                        {% if post in app.user.likes %}
                            <a href="{{ path('app_post_dislike', {'id': post.id}) }}" class="post-action-btn like-btn liked">‚ù§Ô∏è</a>
                        {% else %}
                            <a href="{{ path('app_post_like', {'id': post.id}) }}" class="post-action-btn like-btn">ü§ç</a>
                        {% endif %}
                        
                        <a href="{{ path('app_comment_new', {'post': post.id}) }}" class="post-action-btn">üí¨</a>
                    </div>
                    
                    <div class="post-actions-info">
                        <span class="post-likes-count">{{ post.likes|length }} me gusta</span>
                    </div>
                    
                    {% if app.user.id != post.author.id %}
                        <div class="post-follow-action">
                            {% if post.author in app.user.following %}
                                <form method="post" action="{{ path('app_user_unfollow', {'id': post.author.id}) }}" style="display: inline;">
                                    <button type="submit" class="unfollow-btn">Dejar de seguir</button>
                                </form>
                            {% else %}
                                <form method="post" action="{{ path('app_user_follow', {'id': post.author.id}) }}" style="display: inline;">
                                    <button type="submit" class="follow-btn">Seguir</button>
                                </form>
                            {% endif %}
                        </div>
                    {% endif %}
                {% else %}
                    <div class="post-actions-info">
                        <span class="post-likes-count">{{ post.likes|length }} me gusta</span>
                    </div>
                {% endif %}
            </div>
        </article>
        {% endif %}
    {% else %}
        <div class="empty-state">
            <p>No hay posts.</p>
        </div>
    {% endfor %}
</div>
{% endblock %}
