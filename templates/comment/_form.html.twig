        {{ form_label(form.content, 'Tu comentario', {'label_attr': {'class': 'comment-form-label'}}) }}
        {{ form_widget(form.content, {'attr': {'class': 'form-control comment-textarea', 'placeholder': 'Escribe tu comentario aqu√≠...', 'rows': 5}}) }}
        {{ form_errors(form.content) }}
    </div>
    <div class="comment-form-actions">
        <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-secondary">Cancelar</a>
        <button type="submit" class="btn btn-primary">{{ button_label|default('Publicar Comentario') }}</button>
    </div>
{{ form_end(form) }}
