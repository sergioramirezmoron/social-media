{% extends 'base.html.twig' %}

{% block title %}Registrarse{% endblock %}

{% block body %}
<div class="form-container">
    <h1>Registrarse</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, {'attr': {'class': 'form'}}) }}
        <div class="form-group">
            {{ form_label(registrationForm.username) }}
            {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.username) }}
        </div>
        
        <div class="form-group">
            {{ form_label(registrationForm.plainPassword, 'Contraseña') }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>
        
        <div class="form-group">
            <label style="display: flex; align-items: center; gap: 0.5rem; font-weight: normal; cursor: pointer;">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'style': 'width: auto;'}}) }}
                <span>{{ form_label(registrationForm.agreeTerms) }}</span>
            </label>
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>

        <button type="submit" class="btn btn-primary" style="width: 100%;">Registrarse</button>
    {{ form_end(registrationForm) }}
    
    <div style="margin-top: 1.5rem; text-align: center;">
        <a href="{{ path('app_login') }}" style="color: var(--primary-color); text-decoration: none;">¿Ya tienes cuenta? Inicia sesión</a>
    </div>
</div>
{% endblock %}
