{% extends 'base.html.twig' %}

{% block title %}Usuarios{% endblock %}

{% block body %}
<div class="users-container">
    <h1>Usuarios</h1>

    {% if users|length > 0 %}
        <div class="users-list">
            {% for user in users %}
                {% if not (app.user.id == user.id) %}
                    <div class="user-card">
                        <a href="{{ path('app_user_show', {'id': user.id}) }}">
                            {% if user.picture %}
                                <img src="{{ asset('img/' ~ user.picture) }}" alt="{{ user.username }}" class="user-card-avatar">
                            {% else %}
                                <div class="user-card-avatar avatar-placeholder">{{ user.username|first|upper }}</div>
                            {% endif %}
                        </a>
                        <div class="user-card-info">
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="user-card-name">
                                {{ user.username }}
                            </a>
                        </div>
                        <div class="user-card-actions">
                            {% if user in app.user.following %}
                                <form method="post" action="{{ path('app_user_unfollow', {'id': user.id}) }}" style="display: inline;">
                                    <button type="submit" class="unfollow-btn">Dejar de seguir</button>
                                </form>
                            {% else %}
                                <form method="post" action="{{ path('app_user_follow', {'id': user.id}) }}" style="display: inline;">
                                    <button type="submit" class="follow-btn">Seguir</button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    {% else %}
        <div class="empty-state">
            <p>No se encontraron usuarios.</p>
        </div>
    {% endif %}
</div>
{% endblock %}
