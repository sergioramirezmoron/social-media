{% extends 'base.html.twig' %}

{% block title %}{{ user.username }} - Perfil{% endblock %}

{% block body %}
<div class="profile-container">
    <div class="profile-header">
        <div class="profile-main">
            {% if user.picture %}
                <img src="{{ asset('img/' ~ user.picture) }}" alt="{{ user.username }}" class="profile-avatar">
            {% else %}
                <div class="profile-avatar" style="background-color: #ddd; display: flex; align-items: center; justify-content: center; color: #999; font-weight: bold; font-size: 3rem;">{{ user.username|first|upper }}</div>
            {% endif %}
            
            <div class="profile-info">
                <h1 class="profile-username">{{ user.username }}</h1>
                
                <div class="profile-stats">
                    <div class="profile-stat">
                        <span class="profile-stat-number">{{ user.posts|length }}</span>
                        <span class="profile-stat-label">Publicaciones</span>
                    </div>
                    <div class="profile-stat">
                        <span class="profile-stat-number">{{ user.followers|length }}</span>
                        <span class="profile-stat-label">Seguidores</span>
                    </div>
                    <div class="profile-stat">
                        <span class="profile-stat-number">{{ user.following|length }}</span>
                        <span class="profile-stat-label">Siguiendo</span>
                    </div>
                </div>
                
                <div class="profile-actions">
                    {% if app.user.id == user.id or "ROLE_ADMIN" in app.user.roles %}
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="profile-edit-btn">Editar Perfil</a>
                        <a href="{{ path('app_logout') }}" class="profile-logout-btn">Cerrar Sesi√≥n</a>
                    {% endif %}
                    <a href="{{ path('app_user_index') }}" class="profile-back-btn">Volver</a>
                </div>
            </div>
        </div>
    </div>

    {% if user.followers|length > 0 or user.following|length > 0 %}
    <div class="profile-follow-section">
        {% if user.followers|length > 0 %}
            <h3>Seguidores ({{ user.followers|length }})</h3>
            <div class="follow-list">
                {% for follower in user.followers %}
                    <div class="follow-item">
                        {% if follower.picture %}
                            <a href="{{ path('app_user_show', {'id': follower.id}) }}">
                                <img src="{{ asset('img/' ~ follower.picture) }}" alt="{{ follower.username }}">
                            </a>
                        {% else %}
                            <a href="{{ path('app_user_show', {'id': follower.id}) }}">
                                <div style="width: 80px; height: 80px; border-radius: 50%; background-color: #ddd; display: flex; align-items: center; justify-content: center; color: #999; font-weight: bold; font-size: 2rem; margin-bottom: 0.5rem;">{{ follower.username|first|upper }}</div>
                            </a>
                        {% endif %}
                        <a href="{{ path('app_user_show', {'id': follower.id}) }}">
                            <h4>{{ follower.username }}</h4>
                        </a>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
        
        {% if user.following|length > 0 %}
            <h3 style="margin-top: 2rem;">Siguiendo ({{ user.following|length }})</h3>
            <div class="follow-list">
                {% for following in user.following %}
                    <div class="follow-item">
                        {% if following.picture %}
                            <a href="{{ path('app_user_show', {'id': following.id}) }}">
                                <img src="{{ asset('img/' ~ following.picture) }}" alt="{{ following.username }}">
                            </a>
                        {% else %}
                            <a href="{{ path('app_user_show', {'id': following.id}) }}">
                                <div style="width: 80px; height: 80px; border-radius: 50%; background-color: #ddd; display: flex; align-items: center; justify-content: center; color: #999; font-weight: bold; font-size: 2rem; margin-bottom: 0.5rem;">{{ following.username|first|upper }}</div>
                            </a>
                        {% endif %}
                        <a href="{{ path('app_user_show', {'id': following.id}) }}">
                            <h4>{{ following.username }}</h4>
                        </a>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
    {% endif %}

    <div class="profile-posts-section">
        <h2>Publicaciones</h2>
        {% if user.posts|length > 0 %}
            <div class="profile-posts-grid">
                {% for post in user.posts %}
                    {% if post.visible %}
                        <div class="profile-post-item">
                            <a href="{{ path('app_post_show', {'id': post.id}) }}">
                                {% if post.image %}
                                    <img src="{{ asset('img/' ~ post.image) }}" alt="{{ post.title }}">
                                {% else %}
                                    <div style="width: 100%; height: 100%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; padding: 1rem; text-align: center;">{{ post.title }}</div>
                                {% endif %}
                                <div class="profile-post-overlay">
                                    <p>{{ post.title }}</p>
                                </div>
                            </a>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        {% else %}
            <div class="empty-state">
                <p>No hay publicaciones.</p>
            </div>
        {% endif %}
    </div>
    
    {% if app.user.id == user.id or "ROLE_ADMIN" in app.user.roles %}
        <div style="margin-top: 2rem; text-align: center;">
            {{ include('user/_delete_form.html.twig') }}
        </div>
    {% endif %}
</div>
{% endblock %}
